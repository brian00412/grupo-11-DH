<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>products</title>
    <link rel="stylesheet" href="/css/listadoprodup.css">
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
    <header>
        <%- include("../partials/header") %>
    </header>
    <main>
        <h2>Listado De Producto</h2>
        <div class="formalsita">
                <% products.forEach(product=> { %>
                        <div class="produptos">
                            <div class="prupto">
                                <a href="/productDetail/<%= product.id %>">
                                    <img src="/images/productos/<%= product.imagen %>" class="imagen-produp" alt="">
                                    <div class="informacion-produpto">
                                        <p class="descueto-produp">
                                            <%= product.descuento %>% off
                                        </p>
                                        <p class="precion-produp">$<%= new Intl.NumberFormat().format(product.precio) %>
                                        </p>
                                        <p class="nombre-produp">
                                            <%= product.nombre %>
                                        </p>
                                </a>



                                <div class="botton-produc">
                                    </form>


                                    <a href="/editarProducto/<%= product.id %>">
                                        <p>Editar</p>
                                    </a>
                                    <form action="/eliminarProducto/<%= product.id %>" method="post">
                                        <button>Eliminar</button>
                                    </form>
                                </div>
                            </div>
                        </div>
        </div>
            <% }); %>


    </main>
    <div class="lugar">
        <button class="button">
            <form class="crearb">
                <a href="/crearProduct">
                    <p>Crear</p>
                </a>
            </form>
        </button>
    </div>
</body>


</html>